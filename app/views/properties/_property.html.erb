<table class="min-w-full divide-y divide-gray-200 my-5">
  <tbody class="bg-white divide-y divide-gray-200">
    <tr id="<%= dom_id property %>" class="hover:bg-gray-50">
      <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Título:</td>
      <td class="px-6 py-4 whitespace-nowrap text-gray-700">
        <%= equipment.title %>
      </td>
    </tr>
    <tr>
      <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Tamanho[m²]:</td>
      <td class="px-6 py-4 whitespace-nowrap text-gray-700">
        <%= equipment.size %>
      </td>
    </tr>
    <tr>
      <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Quarto(s):</td>
      <td class="px-6 py-4 whitespace-nowrap text-gray-700">
        <%= property.bathroom_count %>
      </td>
    </tr>
    <tr>
      <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Banheiro(s):</td>
      <td class="px-6 py-4 whitespace-nowrap text-gray-700">
        <%= property.bedroom_count %>
      </td>
    </tr>
  </tbody>
</table>